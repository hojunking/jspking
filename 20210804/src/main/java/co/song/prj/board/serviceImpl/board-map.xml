<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.song.prj.board.service.BoardMapper">
	<!-- 미구현된 sql을 적용하시오 -->
	<select id="snsSelectList" resultType="SnsVO">
		select * from sns
	</select>

	<resultMap type="SnsVO" id="SnsVoMap">
		<id property="sNo" column="sNo" />
		<result property="cNo" column="kk" />
		<result property="cSubject" column="dd" />
	</resultMap>
	<!-- -->

	<select id="snsSelect" resultMap="SnsVoMap">
		select a.*,b.cno as kk,b.cname
		,b.cdate,b.csubject as dd from sns a left outer join
		comments b
		on(a.sno=b.sno) where a.sno =#{sNo}
	</select>

	<select id="commentsSelect"
		resultType="co.song.prj.board.vo.CommentsVO">
		select * from comments where cno=#{cNo}
	</select>
</mapper>