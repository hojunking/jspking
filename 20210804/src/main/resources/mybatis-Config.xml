<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<properties resource="/db.properties">
	</properties>
	<typeAliases>
		<typeAlias type="co.song.prj.board.vo.SnsVO" alias="SnsVO" />
		<typeAlias type="co.song.prj.board.vo.CommentsVO" alias="CommentsVO" />
		<!-- type을 설정해주면 type 을 alias로 바꿔서 쓸 수 있다. -->
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers> <!-- 실제 적용할 SQL 문을 집합시킴 -->
		<mapper resource="co/song/prj/board/serviceImpl/board-map.xml" />
		<mapper resource="co/song/prj/member/serviceImpl/member-map.xml" />
	</mappers>

</configuration>